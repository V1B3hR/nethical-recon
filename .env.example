# Nethical Recon - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# =============================================================================
# API Configuration
# =============================================================================

# Secret key for JWT token signing (CHANGE THIS IN PRODUCTION!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_SECRET_KEY=CHANGE_THIS_IN_PRODUCTION

# API server configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# JWT token expiration in minutes
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Database Configuration
# =============================================================================

# Full database URL (overrides individual DB settings below)
# Examples:
#   SQLite:     sqlite:///./nethical_recon.db
#   PostgreSQL: postgresql://username:password@localhost:5432/nethical_recon
#   MySQL:      mysql://username:password@localhost:3306/nethical_recon
DATABASE_URL=sqlite:///./nethical_recon.db

# Individual database settings (used if DATABASE_URL not set)
DB_USER=nethical
DB_PASSWORD=change_this_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nethical_recon

# =============================================================================
# Celery / Worker Configuration
# =============================================================================

# Redis broker for Celery
BROKER_URL=redis://localhost:6379/0

# Redis backend for results
RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# External API Keys
# =============================================================================

# Shodan API key (for Shodan Eye camera)
# Get your key from: https://account.shodan.io/
SHODAN_API_KEY=

# Censys API credentials (for Censys Eye camera)
# Get your credentials from: https://search.censys.io/account/api
CENSYS_API_ID=
CENSYS_API_SECRET=

# OpenAI API key (for AI features)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# =============================================================================
# Observability
# =============================================================================

# Logging configuration
LOG_LEVEL=INFO
JSON_LOGS=false

# Prometheus metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# Security
# =============================================================================

# CORS origins (comma-separated)
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# Advanced Configuration
# =============================================================================

# Secrets backend: env, dotenv, vault, k8s
SECRETS_BACKEND=dotenv

# Path to .env file (if using dotenv backend)
SECRETS_ENV_FILE=.env

# Vault configuration (if using vault backend)
# VAULT_ADDR=https://vault.example.com:8200
# VAULT_TOKEN=your-vault-token
# VAULT_NAMESPACE=default

# Kubernetes secrets (if using k8s backend)
# K8S_NAMESPACE=default
# K8S_SECRET_NAME=nethical-recon-secrets
