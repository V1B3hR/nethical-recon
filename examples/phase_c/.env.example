# Phase C Example Configuration

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Rules of Engagement (RoE) Configuration

# Rate Limiting
ROE_MAX_REQUESTS_PER_SEC=10.0
ROE_MAX_CONCURRENT_TOOLS=5
ROE_MAX_CONCURRENT_JOBS=10

# Scan Limits
ROE_MAX_SCAN_DURATION=3600  # 1 hour in seconds
ROE_MAX_PORTS=1000
ROE_MAX_THREADS=10

# Tool Authorization
ROE_REQUIRE_EXPLICIT_AUTH=true

# Network Restrictions (optional)
# ROE_ALLOWED_NETWORKS=192.168.0.0/16,10.0.0.0/8
# ROE_DENIED_NETWORKS=192.168.100.0/24

# Database Configuration
NETHICAL_DATABASE_URL=sqlite:///./nethical_recon.db

# Logging
LOG_LEVEL=INFO
